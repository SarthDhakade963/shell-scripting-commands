#!/bin/bash

# ----- COLORS -----
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[1;34m'
NC='\033[0m' # No Color

#Ask user to choose difficulty
echo -e "${BLUE}ðŸŽ¯ Choose difficulty: ${NC}"
echo "1) Easy   (1-10)"
echo "2) Medium (1-50)"
echo "3) Hard   (1-100)"
read -p "ðŸ‘‰ Enter 1, 2, or 3: " level

# Set range based on difficulty
case "$level" in
	1) range=10 ;;
	2) range=50 ;;
	3) range=100 ;;
	*) echo -e "${YELLOW}âŒ Invalid choice. Defaulting to Easy.${NC}"; range=10 ;;
esac

#Generate random number in selected range
target=$((RANDOM % range + 1))
attempts=0
max_attempts=10

# ---- Log Setup ----
timestamp=$(date +"%F_%H-%M-%S")
mkdir -p logs
log_file="logs/guess_log_$timestamp.txt"

echo -e "${YELLOW}ðŸ§  You have $max_attempts attempts to guess the number between 1 and $range.${NC}"
echo "Your guesses will be logged to $log_file"
echo "-------------------------------------------"

# Clear or create log file
echo "==== New Game Started ====" > "$log_file"
echo "Difficulty: 1-$range" >> "$log_file"
echo "Target (hidden): $target" >> "$log_file"

#Start guessing loop
while [ $attempts -le $max_attempts ];
do
	read -p "Guess #$((attempts+1)): " guess
	((attempts++))

	echo "Attempt $attempts : $guess" >> "$log_file"

	if ! [[ "$guess" =~ ^[0-9]+$ ]]; then
		echo -e "${RED}âŒ Not a number!${NC}"
		continue
	fi

	if [ "$guess" -eq "$target" ]; then
		echo -e "${GREEN}ðŸŽ‰ Correct! The number was $target.${NC}"
		echo -e "${GREEN} You guessed it in $attempts attempts.${NC}"
    		echo "âœ… Result: SUCCESS" >> "$log_file"
    		break
	elif [ "$guess" -lt "$target" ]; then
		echo -e "${YELLOW}ðŸ“‰ Too low.${NC}"
	else
		echo -e "${YELLOW}ðŸ“ˆ Too high.${NC}"
	fi

	if [ "$attempts" -eq "$max_attempts" ]; then
		echo -e "${RED}ðŸ’¥ Game over! You ran out of attempts.${NC}"
    		echo -e "${RED}The correct number was $target.${NC}"
    		echo "âŒ Result: FAILED after $max_attempts attempts" >> "$log_file"
		break
  	fi
done
